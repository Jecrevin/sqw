// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "mcr.microsoft.com/devcontainers/python:1-3-bookworm",
	"build": {
		"dockerfile": "Dockerfile",
		// Use 'context' to specify the build context. More info: https://aka.ms/devcontainers-dockerfile-context.
		"context": "..",
		// Update 'args' values as needed. More info: https://aka.ms/devcontainers-docker-args.
		"args": {
			"APT_SOURCES_FILENAME": "debian.sources",
			"PIP_INDEX_URL": "https://mirrors.tuna.tsinghua.edu.cn/pypi/web/simple"
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/common-utils": {
			"configureZshAsDefaultShell": true
		},
		"ghcr.io/devcontainers/features/desktop-lite:1": { },
		"ghcr.io/devcontainers/features/python:1": {
			"toolsToInstall": [ "uv" ]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [ 6080 ],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "bash .devcontainer/setup.sh",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"-ms-python.autopep8",
				"-dbaeumer.vscode-eslint",
				"charliermarsh.ruff",
				"njpwerner.autodocstring",
				"christian-kohler.path-intellisense"
			],
			"settings": {
				"[python]": {
					"editor.defaultFormatter": "charliermarsh.ruff"
				}
			}
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
